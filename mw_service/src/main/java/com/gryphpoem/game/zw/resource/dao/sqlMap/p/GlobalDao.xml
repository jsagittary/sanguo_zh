<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="GlobalDao">
	<select id="selectGlobal" resultType="DbGlobal">
		select
		globalId,mapArea,city,bandit,mine,battle,worldTask,cabinetLead,privateChat,trophy,gestapo,globalExt,worldSchedule,dominateData
		from
		p_global
	</select>

	<insert id="insertGlobal" parameterType="DbGlobal"
		useGeneratedKeys="true" keyProperty="globalId">
		insert into
		p_global(mapArea,city,bandit,mine,battle,worldTask,cabinetLead,privateChat,trophy,gestapo,globalExt,worldSchedule,dominateData)
		values(#{mapArea},#{city},#{bandit},#{mine},#{battle},#{worldTask},#{cabinetLead},#{privateChat},#{trophy},#{gestapo},#{globalExt},#{worldSchedule},#{dominateData})
	</insert>

	<update id="updateGlobal" parameterType="DbGlobal">
		update p_global set
		mapArea=#{mapArea},city=#{city},bandit=#{bandit},mine=#{mine},battle=#{battle},worldTask=#{worldTask},dominateData=#{dominateData}
		,cabinetLead=#{cabinetLead},privateChat=#{privateChat},trophy=#{trophy},gestapo=#{gestapo},globalExt=#{globalExt},worldSchedule=#{worldSchedule}
		where
		globalId=#{globalId}
	</update>

	<insert id="replaceGlobal" parameterType="DbGlobal">
		replace into p_global
		set
		globalId=#{globalId},mapArea=#{mapArea},city=#{city},bandit=#{bandit},mine=#{mine},battle=#{battle},worldTask=#{worldTask},dominateData=#{dominateData}
		,cabinetLead=#{cabinetLead},privateChat=#{privateChat},trophy=#{trophy},gestapo=#{gestapo},globalExt=#{globalExt},worldSchedule=#{worldSchedule}
	</insert>

	<update id="dropGlobalBack">
		drop table IF EXISTS p_global_back;
	</update>

	<update id="copyGlobal">
		create table p_global_back select * from p_global;
	</update>

	<delete id="clearGlobal">
		delete from p_global;
	</delete>
</mapper>
